<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ol2weatherapp</title>

        <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&display=swap" rel="stylesheet">
 
    <!-- stylesheet -->
    <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
    <div class="container">
        
 
      <h1>OL2 Weather Forecast</h1>
      

      <form action="/weather" method="post">
        
        <input type="text" id="city" name="city" placeholder="City/Town..." required>
        <button type="submit">Get Weather</button>
     </form>


        <%if (locals.result && locals.kindofDay) { %>
            <div class="card">
              <h1> <%= result.name %> Weather Forecast</h1>
              <p><%= locals.kindofDay %> </p>
            </div>

            <div class="box1">
              <div class="item">
                <h2 >  <%=((result.main.temp - 273.15).toFixed(2))%>Â°C </h2>
                <p><%=result.weather[0].description%></p>
              </div>
              <div class="item2">
                <img src="http://openweathermap.org/img/wn/<%= result.weather[0].icon %>.png" alt="Weather Icon">
              </div>
            
            </div>

            <div class="info">
              <div class="info1">
                <p>humidity </p>
              </div>
              <div class="info2">
                <p><%= result.main.humidity %>%</p>
              </div>
            </div>
          
            <div class="pressure">
              <div class="pressure1">
                <p>pressure </p>
              </div>
              <p> <%= result.main.pressure %>hPa</p>
            </div>
           
            <div class="wind">
              <div class="wind1">
                <p>wind speed </p>
              </div>
              <p> <%= result.wind.speed %>/s</p>
            </div>

        <% } else {  %>
        
          <div class="header">
            <h1>Enter your city to get weather data</h1>
         </div>
           <% } %>

    </div>
   

     
   
        
    
  

</form>  

</body>
</html>